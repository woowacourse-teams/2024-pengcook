<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Headline">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="android:fontFamily">@font/notosans_bold</item>
    </style>
    <style name="Headline.H1" parent="Headline">
        <item name="android:textSize">28sp</item>
    </style>
    <style name="Headline.H2" parent="Headline">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Headline.H3" parent="Headline">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Headline.H4" parent="Headline">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
    </style>
    <style name="Body.B1" parent="Body">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Body.B2" parent="Body">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
